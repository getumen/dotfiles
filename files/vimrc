set nocompatible
filetype off
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()
Plugin 'VundleVim/Vundle.vim'
Plugin 'scrooloose/nerdtree'
Plugin 'udalov/kotlin-vim'

call vundle#end()
filetype plugin indent on

" settings

set number
set background=dark

set virtualedit=onemore
set smartindent
set visualbell
set showmatch
set laststatus=2

set list listchars=tab:\â–¸\-
set expandtab
set tabstop=2
set shiftwidth=2

set incsearch
set wrapscan
set hlsearch
nmap <Esc><Esc> :nohlsearch<CR><Esc>

syntax on
